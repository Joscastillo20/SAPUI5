<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"  xmlns:form="sap.ui.layout.form">   
		<form:SimpleForm
				title="1. {i18n>employeeType}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>tipo}"/>
				<Text text="{=${/_Type} === 'Interno' ? ${i18n>interno} : ${/_Type} === 'Autonomo' ? ${i18n>auto} : ${i18n>gerente}}"/>
				<Link press="editStepOne" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>

		<form:SimpleForm
				title="2. {i18n>employeeData}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>name}"/>
				<Text text="{/FirstName}"/>
				<Label text="{i18n>lastName}"/>
				<Text text="{/LastName}"/>
				<Label text="{= ${/_Type} === 'Autonomo' ? ${i18n>CIF} : ${i18n>DNI}}"/>
				<Text  text="{/_Dni}"/>
				<Label text="{= ${/_Type} === 'Autonomo' ? ${i18n>precioDiario} : ${i18n>saldoBruto}}"/>
				<Text  text="{/_Salary}"/>
				<Label text="{i18n>dateInc}"/>
				<Text  text="{path:'/CreationDate',type:'sap.ui.model.type.Date'}"/>
				<Link press="editStepTwo" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>

		<form:SimpleForm
				title="3. {i18n>AdittionalData}"
				minWidth="1024"
				editable="false"
				layout="ResponsiveGridLayout">
			<form:content>
				<Label text="{i18n>coment}"/>
				<Text text="{/Comments}"/>
				<Label text="{i18n>document}"/>
				<Text text="{/_numFiles} {i18n>ficheros}"/>
				<Label></Label>
				<List items="{/_files}">
					<items>
						<StandardListItem title="{DocName}"></StandardListItem>
					</items>
				</List>
				<Link press="editStepThree" text="{i18n>editar}" />
			</form:content>
		</form:SimpleForm>


</core:FragmentDefinition>        